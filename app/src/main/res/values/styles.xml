        <item name="android:icon">@drawable/ic_actionbar</item>
        <item name="android:actionOverflowButtonStyle">@android:style/Widget.Holo.ActionButton.Overflow</item>
        <item name="android:actionButtonStyle">@android:style/Widget.Holo.ActionButton.Overflow</item>
    </style>

    <!-- Main activity theme -->
    <style name="DbufrTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Dbufr.NoTitle</item>
    </style>

