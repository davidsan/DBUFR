<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_white"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:padding="16dp">

    <TextView
        android:id="@+id/list_item_grade_casper_textview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/rounded_corner_ue"
        android:gravity="center_vertical|center_horizontal"
        android:singleLine="false"
        android:text="MX123"
        android:textColor="@color/indigo_50"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:id="@+id/list_item_grade_type_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Note finale DBUFR premiere session"
            android:textColor="@color/text_normal"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/list_item_grade_description_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Creation du 14-10-2015-309"
            android:textColor="@color/text_normal"
            android:textSize="14sp" />
        <!--<TextView-->
        <!--android:id="@+id/list_item_student_id"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:autoText="true"-->
        <!--android:text="1234567"-->
        <!--android:textAppearance="?android:attr/textAppearanceSmall"-->
        <!--android:textColor="#e6e6e6"-->
        <!--android:textSize="10sp" />-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_grade_date_textview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right|end"
            android:text="S1/2015"
            android:textColor="@color/text_date"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="bottom|end"
            android:orientation="horizontal">
            <!--android:background="@drawable/rounded_corner">-->
            <TextView
                android:id="@+id/list_item_grade_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="19.99"
                android:textColor="@color/indigo_500"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/list_item_max_grade_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="/20"
                android:textColor="@color/indigo_500"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
